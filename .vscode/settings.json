{
  /** Files */
  "files.eol": "\n",
  "files.encoding": "utf8",

  /** Editor */
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  /** ESLint */
  "eslint.validate": ["typescript", "javascript", "vue"],

  /** Stylelint */
  "css.validate": false,
  "scss.validate": false,
  "stylelint.validate": [
    "css",
    "scss",
    "vue"
  ]
}
