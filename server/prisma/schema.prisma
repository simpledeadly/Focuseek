generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int    @id @default(autoincrement())
  username      String @unique
  password_hash String

  @@map(name: "users")
  Item Item[]
  Collection Collection[]
}

enum ItemType {
  todo
  note
}

model Collection {
  id         Int      @id @default(autoincrement())
  userId     Int
  title      String
  createdAt  DateTime @default(now()) @map("created_at")
  editedAt   DateTime @updatedAt @map("edited_at")
  user       User     @relation(fields: [userId], references: [id])
  items      Item[]
  
  @@map(name: "collections")
}

model Item {
  id           Int       @id @default(autoincrement())
  userId       Int
  collectionId Int
  parentItemId Int?
  title        String
  type         ItemType
  isDone       Boolean?
  deadline     String?
  createdAt    DateTime  @default(now()) @map("created_at")
  editedAt     DateTime  @updatedAt @map("edited_at")
  user         User      @relation(fields: [userId], references: [id])
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  parent       Item?     @relation("ItemToParent", fields: [parentItemId], references: [id])
  subtodos     Item[]    @relation("ItemToParent")
  
  @@map(name: "items")
  SubItem SubItem[] @relation(name: "ItemToSubItem")
}

model SubItem {
  id       Int     @id @default(autoincrement())
  title    String
  type     ItemType
  isDone   Boolean?
  deadline   String?
  parentId Int?
  parent   Item?   @relation(fields: [parentId], references: [id], name: "ItemToSubItem") // Используйте то же имя отношения

  @@map(name: "subitems")
}
