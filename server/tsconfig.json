{
	"compilerOptions": {
		"target": "ES5",
		"module": "CommonJS",
		"moduleResolution": "node",
		"lib": ["esnext"],
		"strict": true,
		"allowJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
